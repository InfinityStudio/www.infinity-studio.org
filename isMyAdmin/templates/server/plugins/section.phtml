    id="plugins-<?php echo preg_replace('/[^a-z]/', '', mb_strtolower($plugin_type)); ?>">
    <caption class="tblHeaders">
        <?php echo htmlspecialchars($plugin_type); ?>
    </caption>
    <thead>
        <tr>
            <th><?php echo  __('Plugin'); ?></th>
